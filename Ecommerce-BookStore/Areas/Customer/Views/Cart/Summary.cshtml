<!-- Checkout Start -->
<form asp-action="Summary">
<div class="checkout">
    <div class="container">
        <div class="row mb-5 mt-3">
            <div class="col-md-7">
                <div class="billing-address">
                        <input hidden asp-for="OrderHeader.OrderStatus" />
                    <h2 class="text-dark my-3 fs-1 fw-bold">Billing Address Form</h2>
                    <div class="row">
                        <div class="col-md-12 my-3">
                                <label class="fw-bold fs-5 ms-2 my-1" style="color:#81c408 !important;">Name</label>
                                <input required asp-for="OrderHeader.Name" value="@Model.OrderHeader.Name" class="form-control" type="text" placeholder="First Name">
                        </div>
                            <div class="col-md-6 ">
                                <label class="fw-bold fs-5 ms-2 my-1" style="color:#81c408 !important;">City</label>
                                <input required asp-for="OrderHeader.City" value="@Model.OrderHeader.City" class="form-control" type="text" placeholder="City">
                        </div>
                            <div class="col-md-6">
                                <label class="fw-bold fs-5 ms-2 my-1" style="color:#81c408 !important;">Mobile No</label>
                            <input required asp-for="OrderHeader.Phone" value="@Model.OrderHeader.Phone" class="form-control" type="text" placeholder="Mobile Number">
                        </div>
                            <div class="col-md-12 mt-3">
                                <label class="fw-bold fs-5 ms-2 my-1" style="color:#81c408 !important;">Address</label>
                                <input required asp-for="OrderHeader.Address" value="@Model.OrderHeader.Address" class="form-control" type="text" placeholder="Address">
                        </div>
                    </div>
                </div>

           
            </div>
            <div class="col-md-5 mt-5 mb-5">
                <div class="card mb-4 mt-5">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Products
                                <span>@Model.CartList.Count() items</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Shipping
                                <span>Gratis</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                <span><strong>@Model.TotalCarts $</strong></span>
                            </li>
                        </ul>

                       
                    </div>
                </div>
                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-lg btn-block">
                    Place Order
                </button>
            </div>
        </div>
    </div>
</div>
</form >
